<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rhythmic Threads - User Page</title>
  <link rel="stylesheet" href="/styles.css">
<style>
    /* General styling */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    .header-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 60px 80px;
        background-color: #f0f0f0;
        position: relative;
        z-index: 5;
    }

    .hamburger {
        font-size: 50px;
        cursor: pointer;
        color: black;
        margin-left: 10px;
    }

    nav {
        display: none; /* Hidden by default */
        flex-direction: column;
        background-color: #f0f0f0;
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        z-index: 1000;
        padding: 20px;
    }

    @media (max-width: 768px) {
        #nav-menu a {
        font-size: 24px; /* Smaller size for smaller screens */
        }
    }
    
    @media (min-width: 769px) {
        #nav-menu a {
        font-size: 36px; /* Larger size for desktops */
        }
    }
    
    nav.show {
        display: flex; /* Show menu when 'show' class is toggled */
    }

    .header-container img.logo {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        z-index: 3;
        max-height: 200px;
    }

    .icon-wrapper {
        display: flex;
        align-items: center;
        gap: 30px;
        margin-right: 20px;
    }

    .icon-image {
        height: 50px;
        width: 50px;
    }

    /* Black-White Banner */
    .black-whitebanner img {
        width: 100%; /* Adjust the width as needed */
        height: 100px;/* Maintain aspect ratio */
        }

    .black-banner {
        background-color: black;
        height: 40px;
        width: 100%;
        position: absolute;
        top: 80px;
        z-index: 2;
    }

    /* Infinite Scrolling Banner */
    .banner {
        overflow: hidden;
        background-color: #FFA500;
        color: #201261;
        font-size: 18px;
        font-weight: bold;
        height: 40px;
        display: flex;
        align-items: center;
        position: relative;
        z-index: 1;
        margin-top: 40px;
    }

    .scrolling-text {
        display: flex;
        white-space: nowrap;
        animation: scroll 10s linear infinite;
    }

    .scrolling-text span {
        margin-right: 50px;
    }

    @keyframes scroll {
        0% {
        transform: translateX(100%);
        }
        100% {
        transform: translateX(-100%);
        }
    }

    /* Product category styling */
    .container {
        padding: 20px;
        text-align: center;
    }

    .product-category {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .product-category div {
        text-align: center;
    }

    .product-category img {
        width: 70%;
        height: auto;
        border-radius: 5px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Styling for cart and summary tables */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        padding: 15px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #f8f9fa;
        color: #333;
        font-weight: bold;
    }

    .table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .table tr:hover {
        background-color: #e9ecef;
    }

    /* Styling for cart-table and summary-table specifically */
    .cart-table th, .cart-table td {
        text-align: left;
    }

    .summary-table th {
        text-align: left;
    }

    /* Button styling */
    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .summary-table {
        margin-top: 20px;
        background-color: #f8f9fa;
    }

    .text-center a {
        color: #007bff;
        text-decoration: underline;
    }

    .btn-dark {
    background-color: #003366;
    color: white;
    border: none;
    border-radius: 6px;
    }

    .btn-dark:hover {
    background-color: #001a33;
    }

    .quantity-control {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    }

    .quantity-control button {
    background-color: #007bff;
    border: none;
    color: white;
    padding: 5px 10px;
    border-radius: 4px;
    cursor: pointer;
    }

    .quantity-control button:hover {
    background-color: #0056b3;
    }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="header-container">
        <span class="hamburger" onclick="toggleMenu()">☰</span>
        <img src="/images/logo.png" alt="Rhythmic Threads Logo" class="logo">
        <div class="icon-wrapper">
        <a href="/profile"><img src="/images/profile-icon.png" alt="Profile" class="icon-image"></a>
        <a href="/cart"><img src="/images/cart-icon.png" alt="Cart" class="icon-image"></a>
        </div>
        <nav id="nav-menu">
        <a href="/user">Home</a>
        <a href="/products/whatsnew">What's New</a>
        <a href="/products/clothes">Clothes</a>
        <a href="/products/vinyls">Vinyls</a>
        <a href="/about">About Us</a>
        <a href="/location">Location</a>
        <a href="/logout">Logout</a>
        </nav>
    </header>
    <!-- Black-White Banner -->
    <div class="black-whitebanner">
        <img src="/images/blackwhite-banner.png" alt="Black White Banner">
    </div>
      
        
    <div class="container">
        <div style="text-align: left;">
            <a href="/user" class="btn btn-secondary">← Back to Products</a>
        </div>
        <h1>My Shopping Cart</h1>
        <table class="table cart-table">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Type</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (carts.length > 0) { %>
                    <% carts.forEach(cart => { %>
                        <tr>
                            <td style="display: flex; align-items: center; gap: 10px;">
                                <img src="/uploads/<%= cart.productImage %>" alt="<%= cart.productName %>" style="width: 70px; height: 70px; object-fit: cover; border-radius: 5px;">
                                <span><%= cart.productName || 'Unknown Item' %></span>
                            </td>
                            <td><%= cart.itemType %></td>
                            <td>
                                <form action="/cart/<%= cart.cartId %>/update" method="POST" class="quantity-form">
                                    <div class="quantity-control" data-cart-id="<%= cart.cartId %>">
                                        <button type="button" class="btn-decrease">-</button>
                                        <input type="text" name="quantity" value="<%= cart.quantity %>" readonly style="width: 40px; text-align: center;">
                                        <button type="button" class="btn-increase">+</button>
                                    </div>
                                </form>

                            </td>                     
                            <td>$<%= cart.productPrice ? Number(cart.productPrice).toFixed(2) : '0.00' %></td>
                            <td>$<%= cart.productPrice && cart.quantity ? (Number(cart.productPrice) * cart.quantity).toFixed(2) : '0.00' %></td>
                            <td>
                                <form action="/cart/<%= cart.cartId %>/delete" method="POST">
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">Your cart is empty.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
        <h2>Order Summary</h2>
        <table class="table summary-table">
            <tr>
                <th>Total Items</th>
                <td><%= carts.reduce((acc, cart) => acc + cart.quantity, 0) %></td>
            </tr>
            <tr>
                <th>Total Amount</th>
                <td>$<%= carts.reduce((acc, cart) => acc + (cart.productPrice * cart.quantity || 0), 0).toFixed(2) %></td>
            </tr>
        </table>
        <% if (carts.length > 0) { %>
            <div style="text-align: center; margin-top: 20px;">
                <form action="/payment" method="GET">
                    <button type="submit" class="btn btn-dark" style="font-size: 18px; padding: 12px 30px;">Checkout</button>
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>    
<script>
    function toggleMenu() {
      const navMenu = document.getElementById("nav-menu");
      navMenu.classList.toggle("show");
    }
    document.querySelectorAll('.quantity-control').forEach(group => {
    const input = group.querySelector('input');
    const cartId = group.dataset.cartId;

    group.querySelector('.btn-increase').addEventListener('click', () => {
      input.value = parseInt(input.value) + 1;
      alert('Item quantity increased.');
      group.closest('form').submit();
    });

    group.querySelector('.btn-decrease').addEventListener('click', () => {
      const current = parseInt(input.value);
      if (current > 1) {
        input.value = current - 1;
        alert('Item quantity decreased.');
        group.closest('form').submit();
      } else {
        if (confirm('Quantity is 1. Do you want to remove this item from your cart?')) {
          const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/cart/${cartId}/delete`;
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = '_method';
            input.value = 'DELETE';
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        } else {
            alert('Item quantity not changed.');
        }
      }
    });
  });
</script>

    
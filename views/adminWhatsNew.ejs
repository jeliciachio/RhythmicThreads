<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rhythmic Threads - What's New</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
  /* General styling */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f0f0f0;
}

.header-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60px 80px;
  background-color: #f0f0f0;
  position: relative;
  z-index: 5;
}

.hamburger {
  font-size: 50px;
  cursor: pointer;
  color: black;
  margin-left: 10px;
}

nav {
  display: none; /* Hidden by default */
  flex-direction: column;
  background-color: #f0f0f0;
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  z-index: 1000;
  padding: 20px;
}

@media (max-width: 768px) {
  #nav-menu a {
    font-size: 24px; /* Smaller size for smaller screens */
  }
}

@media (min-width: 769px) {
  #nav-menu a {
    font-size: 36px; /* Larger size for desktops */
  }
}

nav.show {
  display: flex; /* Show menu when 'show' class is toggled */
}

.header-container img.logo {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
  max-height: 200px;
}

.icon-wrapper {
  display: flex;
  align-items: center;
  gap: 30px;
  margin-right: 20px;
}

.icon-image {
  height: 50px;
  width: 50px;
}

/* Black-White Banner */
.black-whitebanner img {
  width: 100%; /* Adjust the width as needed */
  height: 100px;/* Maintain aspect ratio */
  }

.black-banner {
  background-color: black;
  height: 40px;
  width: 100%;
  position: absolute;
  top: 80px;
  z-index: 2;
}

/* Infinite Scrolling Banner */
.banner {
  overflow: hidden;
  background-color: #FFA500;
  color: #201261;
  font-size: 18px;
  font-weight: bold;
  height: 40px;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
  margin-top: 40px;
}

.scrolling-text {
  display: flex;
  white-space: nowrap;
  animation: scroll 10s linear infinite;
}

.scrolling-text span {
  margin-right: 50px;
}



/* Product category styling */
.container {
  padding: 20px;
  text-align: center;
}

  /* Product Section */
  .product-category {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Max 3 per row */
  gap: 20px;
  justify-items: center;
}

.card {
  width: 300px;           /* Fixed width for uniformity */
  height: 450px;          /* Fixed height for layout consistency */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  padding: 15px;
  text-align: center;
  overflow: hidden;
}

.card img {
  width: 100%;
  height: 200px;
  object-fit: cover; /* Prevents image stretching */
  border-radius: 5px;
}


  .card h3 {
    font-size: 1.2rem;
    margin: 10px 0;
  }

  .product-price {
    font-weight: bold;
    margin: 10px 0;
  }

  .btn {
    display: inline-block;
    padding: 10px 15px;
    font-size: 14px;
    text-decoration: none;
    color: white;
    background-color: #007bff;
    border-radius: 5px;
  }

  .btn:hover {
    background-color: #0056b3;
  }

  @media (max-width: 992px) {
    .product-category {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 600px) {
    .product-category {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>
</head>
<body>
  <!-- Header -->
  <header class="header-container">
    <span class="hamburger" onclick="toggleMenu()">â˜°</span>
    <img src="/images/logo.png" alt="Rhythmic Threads Logo" class="logo">
    <div class="icon-wrapper">
      <a href="/logout"><img src="/images/logout-icon.png" alt="Log Out" class="icon-image"></a>
      <a href="/profile"><img src="/images/profile-icon.png" alt="Profile" class="icon-image"></a>
    </div>
    <nav id="nav-menu">
      <a href="/admin">Home</a>
      <a href="/admin/managewhatsnew">Manage What's New</a>
      <a href="/admin/manageclothes">Manage Clothes</a>
      <a href="/admin/managevinyls">Manage Vinyls</a>
      <a href="/admin/manageuser">Manage User</a>
      <a href="/admin/viewtransactions">View Transactions</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

<!-- Main content -->
<div class="black-whitebanner">
  <img src="/images/blackwhite-banner.png" alt="Black and white banner">
</div>

<body>
  <h1>Manage What's New</h1>
  <a href="/admin/addnewproduct/WhatsNew" class="add-new">Manage Whats New</a>

  <div class="product-category">
    <% products.forEach((item) => { %>
      <div class="card">
        <% if (item.image && item.image !== 'default-image.jpg') { %>
          <img src="/uploads/<%= item.image %>" alt="<%= item.name %>">
        <% } else { %>
            <img src="/images/no-image.png" alt="No Image Available">
        <% } %>      
        <h3><%= item.name %></h3>
        <p><%= item.description %></p>
        <p class="product-price">Price: $<%= (typeof item.price === 'number' ? item.price.toFixed(2) : '0.00') %></p>
        <p><strong>RSVPs:</strong>
          <% if (item.rsvps && item.rsvps.length > 0) { %>
            <%= item.rsvps.join(", ") %>
          <% } else { %>
            None
          <% } %>
        </p>

        <form action="/admin/editproduct/<%= item.id %>/WhatsNew" method="GET">
          <button class="btn">Edit</button>
        </form>
        <form action="/admin/deleteproduct/<%= item.id %>/WhatsNew" method="POST">
          <button class="btn">Delete</button>
        </form>
      </div>
    <% }); %>
  </div>
</body>
</html>

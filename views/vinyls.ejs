<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rhythmic Threads - Vinyls</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* General styling */
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f0f0;
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 60px 80px;
    background-color: #f0f0f0;
    position: relative;
    z-index: 5;
  }

  .hamburger {
    font-size: 50px;
    cursor: pointer;
    color: black;
    margin-left: 10px;
  }

  nav {
    display: none; /* Hidden by default */
    flex-direction: column;
    background-color: #f0f0f0;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 20px;
  }

  @media (max-width: 768px) {
    #nav-menu a {
      font-size: 24px; /* Smaller size for smaller screens */
    }
  }
  
  @media (min-width: 769px) {
    #nav-menu a {
      font-size: 36px; /* Larger size for desktops */
    }
  }
  
  nav.show {
    display: flex; /* Show menu when 'show' class is toggled */
  }

  .header-container img.logo {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    max-height: 200px;
  }

  .icon-wrapper {
    display: flex;
    align-items: center;
    gap: 30px;
    margin-right: 20px;
  }

  .icon-image {
    height: 50px;
    width: 50px;
  }

  /* Black-White Banner */
  .black-whitebanner img {
    width: 100%; /* Adjust the width as needed */
    height: 100px;/* Maintain aspect ratio */
    }

  .black-banner {
    background-color: black;
    height: 40px;
    width: 100%;
    position: absolute;
    top: 80px;
    z-index: 2;
  }

  /* Infinite Scrolling Banner */
  .banner {
    overflow: hidden;
    background-color: #FFA500;
    color: #201261;
    font-size: 18px;
    font-weight: bold;
    height: 40px;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 1;
    margin-top: 40px;
  }

  .scrolling-text {
    display: flex;
    white-space: nowrap;
    animation: scroll 10s linear infinite;
  }

  .scrolling-text span {
    margin-right: 50px;
  }

  /* Filter Section */
  .filter-section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin: 20px;
    padding: 15px;
    background-color: #e6e6e6;
    border-radius: 10px;
  }

  label {
    font-weight: bold;
    margin-bottom: 5px;
  }

  select {
    padding: 5px;
    font-size: 16px;
    border-radius: 5px;
    border: 1px solid #ddd;
    margin-top: 5px;
  }

  .currency-selector {
    margin: 10px 20px;
    text-align: right;
  }

  @keyframes scroll {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Product category styling */
  .container {
    padding: 20px;
    text-align: center;
  }

    /* Product Section */
    .product-category {
      display: grid;
      grid-template-columns: repeat(3, 1fr); /* Max 3 per row */
      gap: 20px;
      justify-items: center;
    }

    .card {
      width: 300px;           /* Fixed width for uniformity */
      height: 450px;          /* Fixed height for layout consistency */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 15px;
      text-align: center;
      overflow: hidden;
    }

    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover; /* Prevents image stretching */
      border-radius: 5px;
    }


    .card h3 {
      font-size: 1.2rem;
      margin: 10px 0;
    }

    .product-price {
      font-weight: bold;
      margin: 10px 0;
    }

    .btn {
      display: inline-block;
      padding: 10px 15px;
      font-size: 14px;
      text-decoration: none;
      color: white;
      background-color: #007bff;
      border-radius: 5px;
    }

    .btn:hover {
      background-color: #0056b3;
    }
    @media (max-width: 992px) {
      .product-category {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    @media (max-width: 600px) {
      .product-category {
        grid-template-columns: repeat(1, 1fr);
      }
    }

</style>
</head>
<body>
  <!-- Header -->
  <header class="header-container">
    <span class="hamburger" onclick="toggleMenu()">â˜°</span>
    <img src="/images/logo.png" alt="Rhythmic Threads Logo" class="logo">
    <div class="icon-wrapper">
      <a href="/profile"><img src="/images/profile-icon.png" alt="Profile" class="icon-image"></a>
      <a href="/cart"><img src="/images/cart-icon.png" alt="Cart" class="icon-image"></a>
    </div>
    <nav id="nav-menu">
      <a href="/user">Home</a>
      <a href="/products/whatsnew">What's New</a>
      <a href="/products/clothes">Clothes</a>
      <a href="/products/vinyls">Vinyls</a>
      <a href="/about">About Us</a>
      <a href="/location">Location</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <!-- Banner -->
  <div class="black-whitebanner">
    <img src="/images/blackwhite-banner.png" alt="What's New">
  </div>

  <!-- Main content -->
  <div class="container">
    <h1>Vinyls</h1>
    <p>Check out our different vinyl records!</p>

    <!-- Filter Section -->
    <div class="filter-section">
      <label for="category-filter">Category:</label>
      <form method="GET" action="/products/vinyls">
        <select id="category-filter" name="filter" onchange="this.form.submit()">
          <option value="all" <%= filter === 'all' ? 'selected' : '' %>>All</option>
          <option value="pop" <%= filter === 'pop' ? 'selected' : '' %>>Pop</option>
          <option value="rnb" <%= filter === 'rnb' ? 'selected' : '' %>>RnB</option>
          <option value="jazz" <%= filter === 'jazz' ? 'selected' : '' %>>Jazz</option>
          <option value="band" <%= filter === 'band' ? 'selected' : '' %>>Band</option>
        </select>
      </form>
    </div>

    <!-- Currency Selector -->
    <div class="currency-selector">
      <label for="currencySelector">Select Currency:</label>
      <select id="currencySelector" class="form-select w-auto d-inline">
        <option value="SGD" selected>SGD</option>
        <option value="USD">USD</option>
        <option value="EUR">EUR</option>
        <option value="GBP">GBP</option>
        <option value="INR">INR</option>
      </select>
    </div>

    <!-- Product List -->
    <div class="product-category">
      <% vinyls.forEach((item) => { %>
        <div class="card">
          <img src="/images/<%= item.vinylImage %>" alt="<%= item.vinylName %>">
          <h3>
            <a href="/products/vinyls/<%= item.vinylId %>"><%= item.vinylName %></a>
          </h3>
          <p><%= item.vinylDescription %></p>
          <p class="product-price" data-base-price="<%= item.vinylPrice %>">
            SGD $<%= item.vinylPrice %>
          </p>
          <a href="/products/vinyls/<%= item.vinylId %>" class="btn">View Details</a>
        </div>
      <% }); %>
    </div>
  </div>

  <script>
    function toggleMenu() {
      const navMenu = document.getElementById('nav-menu');
      navMenu.classList.toggle('show');
    }

    // Currency conversion logic
    const API_KEY = 'fca_live_mO96uik4lTumz0DX39gH9rDbofYrNiCW6g4ob51r';

    document.addEventListener('DOMContentLoaded', () => {
      const currencySelector = document.getElementById('currencySelector');
      
      currencySelector.addEventListener('change', async () => {
        const selectedCurrency = currencySelector.value;

        try {
          const response = await fetch(`https://api.freecurrencyapi.com/v1/latest?apikey=${API_KEY}&base_currency=SGD`);
          if (!response.ok) throw new Error('Failed to fetch exchange rates');
          const data = await response.json();
          const rate = data.data[selectedCurrency];
          if (rate) {
            updatePrices(rate, selectedCurrency);
          } else {
            alert('Currency not supported.');
          }
        } catch (error) {
          console.error('Error fetching currency rates:', error);
          alert('Failed to fetch currency rates. Please try again later.');
        }
      });

      function updatePrices(rate, currency) {
        document.querySelectorAll('.product-price').forEach(el => {
          const basePrice = parseFloat(el.dataset.basePrice);
          el.textContent = `${currency} ${(basePrice * rate).toFixed(2)}`;
        });
      }
    });
  </script>
</body>
</html>
